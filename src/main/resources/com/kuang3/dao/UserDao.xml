<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kuang3.dao.UserDao">
	<insert id="saveUser" parameterType="user">
		insert into user(uid,email,pwd,phone,address) values(#{uid},#{email},#{pwd},#{phone},#{address})
	</insert>
	
	<select id="vailEmail"  parameterType="user" resultType="int">
		select count(*) from user where email=#{email}
	</select>
	
	<update id="activeUser" parameterType="user">
		update user set status=1 where uid=#{uid}
	</update>
	<select id="login" parameterType="user" resultType="user">
		select * from user where email=#{email} and pwd=#{pwd}
	</select>
</mapper>